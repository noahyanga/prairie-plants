<div class="search-bar has-text-centered">
  <h2 class="title is-3">Search Products</h2>
  <%= form_with url: search_products_path, method: :get, local: true do %>
    <div class="columns is-mobile is-multiline is-flex is-justify-content-center">
      <!-- Search Bar -->
      <div class="column is-full">
        <div class="field">
          <div class="control">
            <%= text_field_tag :keyword, params[:keyword], placeholder: "Search by product name or description...", class: 'input' %>
          </div>
        </div>
      </div>

      <!-- Category Dropdown and Submit Button -->
      <div class="column is-flex is-justify-content-center is-align-items-center is-narrow">
        <!-- Select Dropdown -->
        <div class="field mr-2">
          <div class="control">
            <%= select_tag :category_id, options_from_collection_for_select(@categories || [], :id, :name, params[:category_id]), include_blank: "All Categories", class: 'select' %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="field">
          <div class="control">
            <%= submit_tag "Search", class: 'button is-info' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
