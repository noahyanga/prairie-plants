  <head>
    <title>Prairie Plants - Home</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" rel="stylesheet">
  </head>
<h2>Your Shopping Cart</h2>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% @cart_items.each do |item| %>
        <% product = item[:product] %>
        <% quantity = item[:quantity] %>
        <tr>
          <td><%= product.name %></td>
          <td><%= quantity %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= number_to_currency(product.price * quantity) %></td>
          <td>
            <%= button_to 'Remove', remove_from_cart_product_path(product), method: :delete, class: 'button is-danger' %>
          </td>
        </tr>
        <% total += product.price * quantity %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">Total</th>
        <th colspan="2"><%= number_to_currency(total) %></th>
      </tr>
    </tfoot>
  </table>
<% end %>
