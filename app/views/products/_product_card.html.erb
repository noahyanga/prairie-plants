<div class="column is-one-third mb-4">
  <div class="card custom-card">
    <div class="card-content">
      <h5 class="title is-5"><%= product.name %></h5>
      <p class="content"><%= truncate(product.description, length: 100) %></p>
      <p><strong>Price:</strong> $<%= product.price %></p>
      <%= link_to "View Details", product_path(product), class: "button is-primary" %>
    </div>
  </div>
</div>
