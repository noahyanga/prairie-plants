<div class="column is-12-mobile is-6-tablet is-one-third-desktop mb-4">
  <div class="card custom-card" style="height: 100%;">
    <div class="card-content" style="display: flex; flex-direction: column; justify-content: space-between; height: 100%;">
      <!-- Product Image -->
      <% if product.image.present? %>
        <div class="product-image has-text-centered mb-4">
          <%= image_tag product.image.url(), alt: product.name, class: "image", style: "object-fit: cover; width: 100%; max-height: 200px; border-radius: 8px;" %>
        </div>
      <% else %>
        <div class="product-image has-text-centered mb-4">
          <p class="has-text-grey-light">No image available</p>
        </div>
      <% end %>

      <!-- Product Details -->
      <div>
        <h5 class="title is-5 has-text-dark"><%= product.name %></h5>
        <p class="content has-text-grey-dark is-size-6"><%= truncate(product.description, length: 100) %></p>
        <p class="has-text-weight-semibold is-size-5">Price: $<%= product.price %></p>
      </div>

      <!-- View Details Button -->
      <%= link_to "View Details", product_path(product), class: "button is-primary is-fullwidth mt-3" %>
    </div>
  </div>
</div>
