<head>
  <title>Prairie Plants - Home</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <link href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" rel="stylesheet">
</head>

<div class="container mt-5">
  <h1 class="title is-1 has-text-centered"><%= @product.name %></h1>
  
  <div class="columns mt-4">
    <div class="column is-half">
      <h3 class="is-size-3">Price: $<%= @product.price %></h3>
      <p><%= @product.description %></p>

      <% if @product.categories.any? %>
        <p><strong>Categories:</strong> <%= @product.categories.map(&:name).join(", ") %></p>
      <% end %>

      <a href="<%= category_path(@product.categories.first) %>" class="button is-primary mt-3">Back to <%= @product.categories.first.name %></a>
    </div>
  </div>
</div>
