  <head>
    <title>Prairie Plants - Home</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" rel="stylesheet">
  </head>
<h1 class="title"><%= @category.name %></h1>
<p><%= @category.description %></p>

<div class="columns is-multiline">
  <% @products.each do |product| %>
    <div class="column is-one-third mb-4">
      <div class="card custom-card">
        <div class="card-content">
          <h5 class="title is-5"><%= product.name %></h5>
          <p class="content"><%= truncate(product.description, length: 100) %></p>
          <p><strong>Price:</strong> $<%= product.price %></p>
          <%= link_to "View Details", product_path(product), class: "button is-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="has-text-centered">
  <%= paginate @products %>
</div>
